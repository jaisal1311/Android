<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.bhavik.myapplication.RelativeLayout">


    <TextView
        android:id="@+id/txtLast"
        android:textSize="30sp"
        android:layout_alignParentBottom="true"
        android:text="Last/Bottom"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <TextView
        android:id="@+id/txtFirst"
        android:textSize="30sp"
        android:text="First/Top"
        android:layout_alignParentTop="true"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <TextView
        android:id="@+id/txtCenter"
        android:textSize="30sp"
        android:text="Center"
        android:layout_centerHorizontal="true"
        android:layout_below="@+id/txtFirst"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <TextView
        android:id="@+id/txtRight"
        android:textSize="30sp"
        android:text="Right"
        android:layout_below="@+id/txtFirst"
        android:layout_toRightOf="@+id/txtCenter"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <TextView
        android:id="@+id/txtLeft"
        android:textSize="30sp"
        android:text="Left"
        android:layout_below="@+id/txtFirst"
        android:layout_toLeftOf="@+id/txtCenter"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

</RelativeLayout>
